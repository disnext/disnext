{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "example"]
}
